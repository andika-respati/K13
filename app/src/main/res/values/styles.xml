<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="chatListItemName">
        <item name="android:textColor">#5A5A5C</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="chatListItemDate">
        <item name="android:textColor">@color/chatListItemHints</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="chatListItemHints">
        <item name="android:textColor">@color/chatListItemHints</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="chatListItemNewCount">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_chat_item_new_count</item>
    </style>
    <style name="chatBubbleLeft">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#45484D</item>
    </style>
    <style name="chatBubbleRight">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#45484D</item>
    </style>
    <style name="drawerListItem">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/chatListItemHints</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="drawerListItemIcon">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_width">25dp</item>
    </style>
    <style name="profileName">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="profileLastSeenAndStatus">
        <item name="android:textColor">#90FFFFFF</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="profileContactCard">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
